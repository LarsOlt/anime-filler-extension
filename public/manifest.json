{
    "manifest_version": 2,
    "name": "Plex Animme Filler",
    "description": "Shows animefillerlist.com information in Plex!",
    "version": "1.0.0",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/web/*",
                "*://app.plex.tv/*"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "activeTab",
        "notifications",
        "http://*/*",
        "https://*/*"
    ]
}